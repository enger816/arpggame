// 将设置放入此文件中以覆盖默认值和用户设置。
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        //"**/*.map": true,
        //"**/*.js": true,
        "**/*.config": true,
        "**/*.csproj": true,
        "**/*.csproj.user": true,
        "**/*.msgtsvm": true,
        "**/*.strutsvm": true,
        "**/*.ts.vm": true,
        "**/*.ico": true,
        "res": true,
        "obj": true, 
        "bin": true,
        "jsbin": true,
        "server": true
    },
    // 控制字体系列。
    "editor.fontFamily": "Consolas, 'Courier New', monospace",

    // 控制字体粗细。
    "editor.fontWeight": "normal",

    // 以像素为单位控制字号。
    "editor.fontSize": 15

}